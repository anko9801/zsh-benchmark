{
  "tasks": {
    "benchmark": "deno run --allow-read --allow-write --allow-run=bash --allow-env=HOME src/benchmark-cli.ts",
    "test": "deno run --allow-read --allow-write --allow-run=bash --allow-env=HOME src/benchmark-cli.ts test",
    "versions": "deno run --allow-read --allow-write --allow-run=bash --allow-env=HOME src/benchmark-cli.ts versions",
    "charts": "deno run --allow-read --allow-write src/chart-generator.ts",
    "generate-readme": "deno run --allow-read --allow-write --allow-net src/generate-readme.ts",
    "docker:build": "docker build -t zsh-benchmark .",
    "docker:run": "docker run --rm -v $(pwd):/benchmark zsh-benchmark",
    "docker": "deno task docker:build && deno task docker:run",
    "clean": "rm -rf results/*.json results/*.svg",
    "fmt": "deno fmt",
    "lint": "deno lint"
  },
  "compilerOptions": {
    "strict": true
  },
  "fmt": {
    "include": ["src/"],
    "exclude": ["results/"]
  },
  "lint": {
    "include": ["src/"],
    "exclude": ["results/"]
  }
}
